@model ChinChunPetShop.Models.Entity.KhachHang

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="vh-100 mt-5">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="~/images/shared/pic_dang_nhap.png"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 mt-3 mt-lg-0">
                <h2 class="mb-3">Đăng ký</h2>
                <form method="post">
                    <!-- Email input -->
                    <p class="text-danger mb-3">@ViewBag.error</p>
                    <div data-mdb-input-init class="form-outline mb-4">
                        <label class="form-label ipt" for="form3Example1">Họ và tên</label>
                        <input type="text" id="form3Example1" name="HoTen" class="form-control not-null"
                               placeholder="Nhập họ và tên" />

                    </div>
                    <div data-mdb-input-init class="form-outline mb-4">
                        <label class="form-label ipt" for="form3Example3">Địa chỉ Email</label>
                        <input type="email" id="form3Example3" name="Email" class="form-control not-null"
                               placeholder="Nhập địa chỉ Email" />

                    </div>
                    
                    <div data-mdb-input-init class="form-outline mb-4">
                        <label class="form-label ipt" for="form3Example2">Số điện thoại</label>
                        <input type="number" id="form3Example2" name="SDT" class="form-control not-null"
                               placeholder="Nhập địa chỉ số điện thoại" />

                    </div>
                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-3">
                        <label class="form-label ipt" for="form3Example4">Mật khẩu</label>
                        <input type="password" id="form3Example4" name="MatKhau" class="form-control not-null"
                               placeholder="Nhâp mật khẩu" />

                    </div>
                    <div data-mdb-input-init class="form-outline mb-3">
                        <label class="form-label ipt" for="form3Example5">Xác nhận mật khẩu</label>
                        <input type="password" id="form3Example5" name="rMatKhau" class="form-control not-null"
                               placeholder="Nhâp mật khẩu" />

                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="mb-0">
                            <a href="~/nhanvien/dangnhap">Dành cho nhân viên?</a>
                        </div>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg submit-vadidate"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Đăng ký
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Đã có tài khoản? <a href="~/khachhang/dangnhap" class="link-danger">Đăng nhập</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>

</section>